# Darwin on X86_64 processors w/ Intel Fortran, C and C++ compilers.

HU_SYS_LOCAL = :darwin_x86_64_intel:
HU_SYSTEM        = DARWIN
FC            = ifort
CC            = icc
CXX           = icpc
MPI_FC        = mpif77
MPI_CC        = mpicc
MPI_CXX       = mpicxx
HU_MACRO_DEF =   -D
HU_ENDIAN     = HU_ENDIAN_IS_LSB_FIRST
HU_MANGLING   = HU_F77_MANGLING_L11
HU_PTR_BYTES  = 8
HU_PTR_TYPE   = integer*8
HU_POSIX      = HU_POSIX
HU_LRSHIFT    = HU_HAVE_LRSHIFT
HU_RSEED_TYPE = HU_RSEED_RAN
HU_RSEED_SIZE = 1
HU_EOF_STAT   = 36
HU_RECLU_SIZE = 4
CFLAGS_ALL    = 
CFLAGS_OPT    = -O
CFLAGS_DBG    = -g
CFLAGS_ANSI   =
CFLAGS_KR     = 
CXXFLAGS_ALL  = 
CXXFLAGS_OPT  = -O
CXXFLAGS_DBG  = -g
FFLAGS_ALL    = -u -fp-model precise -fpe0
FFLAGS_BSLSH  = -nbs
FFLAGS_OPT    = -O
FFLAGS_DBG    = -g
FBD_EXPLICIT_LINK = yes
LINK          = ifort
LDFLAGS_ALL   = -fpe0 -cxxlib
SYSLIB        =
SHR_EXT       = so
SHR_FFLAGS    = -fPIC
SHR_CFLAGS    = -fPIC
SHR_LFLAGS    = -shared
MPI_SYS       = 1
MPI_LIB       =

# now build the system independent macros using pieces defined above
include $(HERMES_GLOBAL)makeopts.
